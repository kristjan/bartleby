<div id="pageTitle">
		<h1>Edit <%= @station.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @station.object %>
    <%= link_to "Delete", :action => :delete, :id => @station.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @station.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="station[name]" value="<%= @station.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Abbreviation: </td>
              			<td class="itemValue"><input type="text" name="station[abbreviation]" value="<%= @station.abbreviation %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Address: </td>
              			<td class="itemValue"><input type="text" name="station[address]" value="<%= @station.address %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">City: </td>
              			<td class="itemValue"><input type="text" name="station[city]" value="<%= @station.city %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">County: </td>
              			<td class="itemValue"><input type="text" name="station[county]" value="<%= @station.county %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">State: </td>
              			<td class="itemValue"><input type="text" name="station[state]" value="<%= @station.state %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Zip: </td>
              			<td class="itemValue"><input type="text" name="station[zip]" value="<%= @station.zip %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
