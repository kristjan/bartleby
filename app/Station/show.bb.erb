<div id="pageTitle">
	<h1><%= @station.name%></h1>
</div>

<div id="toolbar">
        <%= link_to "Back", :action => :index %>
        <%= link_to "Edit", :action => :edit, :id => @station.object %>
</div>


<div id="content">

    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @station.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Abbreviation</td>
        <td class="itemValue"><%= @station.abbreviation%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Address</td>
        <td class="itemValue"><%= @station.address%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">City</td>
        <td class="itemValue"><%= @station.city%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">County</td>
        <td class="itemValue"><%= @station.county%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">State</td>
        <td class="itemValue"><%= @station.state%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Zip</td>
        <td class="itemValue"><%= @station.zip%></td>
      </tr>
      
    </table>
</div>